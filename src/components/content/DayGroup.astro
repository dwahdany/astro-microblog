---
import type { DayGroup } from '../../lib/types';
import ContentCard from './ContentCard.astro';

interface Props {
  group: DayGroup;
}

const { group } = Astro.props;
---

<section class="mb-8">
  <header class="flex items-center gap-3 mb-4 pb-2 border-b border-terminal-border">
    <span class="text-terminal-accent-green font-mono">$</span>
    <time
      datetime={group.date}
      class="text-terminal-text font-medium"
    >
      {group.displayDate}
    </time>
  </header>
  <div class="space-y-4 pl-2">
    {group.items.map((item) => (
      <ContentCard item={item} />
    ))}
  </div>
</section>
