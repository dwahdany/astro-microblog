---
import { render } from 'astro:content';
import type { EntryItem } from '../../lib/types';
import { getItemUrl } from '../../lib/content';
import TagList from './TagList.astro';

interface Props {
  entry: EntryItem;
  showExcerpt?: boolean;
}

const { entry, showExcerpt = true } = Astro.props;
const url = getItemUrl({ type: 'entry', item: entry });
const { Content } = await render(entry);
---

<article class="group">
  <div class="flex items-start gap-2">
    <a href={url} class="text-terminal-accent-green shrink-0 mt-0.5 hover:text-terminal-accent-cyan transition-colors">▸</a>
    <div class="flex-1 min-w-0">
      <h3 class="text-lg font-semibold">
        <a href={url} class="text-terminal-accent-green hover:text-terminal-accent-cyan transition-colors">
          {entry.data.title}
        </a>
      </h3>
      {showExcerpt && (
        <div class="mt-2 text-terminal-muted text-sm prose prose-sm max-w-none line-clamp-3">
          {entry.data.excerpt ? (
            <p>{entry.data.excerpt}</p>
          ) : (
            <Content />
          )}
        </div>
      )}
      <div class="mt-2 flex items-center gap-3 text-xs text-terminal-muted">
        <a href={url} class="text-terminal-muted hover:text-terminal-accent-cyan transition-colors">
          <time datetime={entry.data.created.toISOString()}>
            {entry.data.created.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' })}
          </time>
        </a>
        {entry.data.tags.length > 0 && (
          <>
            <span class="text-terminal-border">•</span>
            <TagList tags={entry.data.tags} />
          </>
        )}
      </div>
    </div>
  </div>
</article>
