---
export const prerender = true;

import BaseLayout from '../../layouts/BaseLayout.astro';
import TerminalWindow from '../../components/ui/TerminalWindow.astro';
---

<BaseLayout title="Subscribed!" description="You've successfully subscribed to the newsletter.">
  <h1 class="text-2xl font-bold mb-6 flex items-center gap-2">
    <span class="text-terminal-accent-green">></span>
    <span>Subscribed!</span>
  </h1>

  <TerminalWindow title="success.log">
    <div class="prose prose-sm max-w-none">
      <div class="flex items-center gap-3 mb-4">
        <span class="text-terminal-accent-green text-2xl">&#10003;</span>
        <p class="text-terminal-accent-green font-medium m-0">
          You're on the list!
        </p>
      </div>

      <p>
        Check your email to confirm your subscription. Once confirmed, you'll start receiving digests based on your preferences.
      </p>

      <p>
        <a href="/subscribe/">Back to subscribe page</a> &middot;
        <a href="/">Go to homepage</a>
      </p>
    </div>
  </TerminalWindow>
</BaseLayout>
