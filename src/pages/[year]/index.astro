---
export const prerender = true;

import BaseLayout from '../../layouts/BaseLayout.astro';
import DayGroup from '../../components/content/DayGroup.astro';
import { getYearsWithContent, getMonthsWithContent, getContentByDate, groupByDay } from '../../lib/content';

export async function getStaticPaths() {
  const years = await getYearsWithContent();
  return years.map((year) => ({ params: { year: String(year) } }));
}

const { year } = Astro.params;
const yearNum = parseInt(year);
const months = await getMonthsWithContent(yearNum);
const years = await getYearsWithContent();

// Fetch content for each month and group by day
const monthsWithContent = await Promise.all(
  months.map(async ({ month, name, count }) => {
    const content = await getContentByDate(yearNum, month);
    const dayGroups = groupByDay(content);
    return { month, name, count, dayGroups };
  })
);

// Full month names for display
const MONTHS_FULL: Record<number, string> = {
  1: 'January', 2: 'February', 3: 'March', 4: 'April',
  5: 'May', 6: 'June', 7: 'July', 8: 'August',
  9: 'September', 10: 'October', 11: 'November', 12: 'December'
};
---

<BaseLayout title={`Archive: ${year}`} description={`Posts from ${year}`}>
  <div class="mb-8">
    <h1 class="text-2xl font-bold flex items-center gap-2 mb-2">
      <span class="text-terminal-accent-green">></span>
      <span>Archive: {year}</span>
    </h1>
    <p class="text-terminal-muted text-sm">
      ls -la ~/{year}/
    </p>
  </div>

  <div class="space-y-4">
    {monthsWithContent.map(({ month, name, count, dayGroups }) => (
      <details class="group bg-terminal-surface border border-terminal-border rounded-lg">
        <summary class="flex items-center justify-between p-4 cursor-pointer hover:bg-terminal-border/30 transition-colors list-none">
          <span class="text-terminal-text font-medium">{MONTHS_FULL[month]}</span>
          <div class="flex items-center gap-3">
            <span class="text-terminal-muted text-sm">{count} post{count !== 1 ? 's' : ''}</span>
            <span class="text-terminal-muted transition-transform group-open:rotate-90">â–¶</span>
          </div>
        </summary>
        <div class="px-4 pb-4 pt-2 border-t border-terminal-border">
          {dayGroups.map((group) => (
            <DayGroup group={group} />
          ))}
        </div>
      </details>
    ))}
  </div>

  {months.length === 0 && (
    <p class="text-terminal-muted text-center py-8">No posts found for {year}.</p>
  )}

  <nav class="mt-12 pt-8 border-t border-terminal-border">
    <h2 class="text-sm text-terminal-muted mb-4">Other years:</h2>
    <div class="flex flex-wrap gap-3">
      {years.map((y) => (
        <a
          href={`/${y}/`}
          class:list={[
            'px-3 py-1 rounded text-sm transition-colors',
            y === yearNum
              ? 'bg-terminal-accent-green text-terminal-bg'
              : 'bg-terminal-surface text-terminal-muted hover:text-terminal-accent-cyan',
          ]}
        >
          {y}
        </a>
      ))}
    </div>
  </nav>
</BaseLayout>
